<div class="jumbotron bg-warning ">
    <div class="container">
        <img src="/assets/img/burger.png" alt="burger" id="burger-pic">
        <h1>Eat Da Burgers!</h1>
    </div>
</div>
<div class="container">
    <div class="row mb-5 container">
        <div class="col">
            <div class="card">
                <h2 class="card-title">Burgers that were not devoured!</h2>
                <hr>
                <div class="card-body container">
                    <ul>
                        {{#each burgers}}
                        {{#unless devoured}}
                        {{> burger/burger-block devour=true}}
                        {{/unless}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card">
                <h2 class="card-title">Burgers that are devoured!</h2>
                <hr>
                <div class="card-body container">
                    <ul>
                        {{#each burgers}}
                        {{#if devoured}}
                        {{> burger/burger-block devour=false}}
                        {{/if}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="row container mb-5">
        <div class="col-8">
            <div class="card">
                <h2 class="card-title">Add a Burger</h2>
                <hr>
                <div class="card-body">
                    <form class="create-form">
                        <div class="form-group">
                            <label for="brgr">Burger Name:</label>
                            <input type="text" class="form-control" id="brgr" name="burger_name">
                        </div>
                        <div class="form-group">
                            <label for="dev">Hungry?</label><br>
                            <div class="btn-group" data-toggle="buttons">
                                <label class="btn btn-secondary active">
                                    <input type="radio" name="devoured" value="1" checked> Yes Please!
                                </label>
                                <label class="btn btn-secondary">
                                    <input type="radio" name="devoured" value="0"> Not today!
                                </label>
                            </div>
                        </div>
                        <button class="btn btn-outline-primary btn-sm " type="submit">Add Burger</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>